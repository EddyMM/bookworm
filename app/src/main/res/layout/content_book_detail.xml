<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="#fff">

    <TextView
        android:id="@+id/book_detail_author_title"
        android:textAppearance="@style/book_detail_title_text_appearance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/book_detail_title_author"/>

    <TextView
        android:id="@+id/book_detail_author"
        android:textAppearance="@style/book_detail_body_text_appearance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/book_detail_publisher_title"
        android:textAppearance="@style/book_detail_title_text_appearance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/book_detail_title_publisher"/>

    <TextView
        android:id="@+id/book_detail_publisher"
        android:textAppearance="@style/book_detail_body_text_appearance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/book_detail_description_title"
        android:textAppearance="@style/book_detail_title_text_appearance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/book_detail_title_description"/>

    <TextView
        android:id="@+id/book_detail_description"
        android:textAppearance="@style/book_detail_body_text_appearance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>

